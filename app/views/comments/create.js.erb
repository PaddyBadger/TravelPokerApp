<% if @comment.valid? %>
  $(".js-comments").prepend("<%= escape_javascript(render(@comment)) %>");
  $(".new_comment").replaceWith("<%= escape_javascript(render partial: 'comments/form', locals: { card: @card, comment: @comment }) %>");
  $('.js-comments-count').html("<%= @card.comments.count %> Comments");
<% else %>
  $(".new_comment").replaceWith("<%= escape_javascript(render partial: 'comments/form', locals: { card: @card, comment: @comment }) %>");
<% end %>