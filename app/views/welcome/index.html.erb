<div class="centerDiv topSlider fade">
  <%= form_tag search_cards_path, :method => :get do %>
    <div class="searchIn">
      <%= text_field_tag :query, params[:query], placeholder: "Where or what are you looking for?" %> 
      <%= button_tag "Deal", class: "button" %>
   <!-- <input type="text" > -->
    </div>  
  <% end %>        
</div>

<div id="slider-code">
    <div class="picSlider">
        <ul class="picSliderImages">
            <li><img src="/assets/homepage1.png" /></li>
            <li><img src="/assets/homepage2.png" /></li>
            <li><img src="/assets/homepage3.png" /></li>
            <li><img src="/assets/homepage4.png" /></li>
        </ul>
    </div>
</div>


<div class="topDeck">
    <h3>Top Cards</h3>
    <div class="apple_pagination">
      <%= will_paginate @cards %>
    </div>
    <%= render @cards %>
    <div class='card_show'></div>
</div>
<div class="topDeck">
    <h3>Top Decks</h3>
     <div class="apple_pagination">
      <%= will_paginate @decks %>
    </div>
    <%= render @decks %>
</div>
    