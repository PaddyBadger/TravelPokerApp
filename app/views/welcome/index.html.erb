<div class="centerDiv topSlider fade">
  <%= form_tag search_cards_path, :method => :get do %>
    <div class="searchIn">
      <%= text_field_tag :query, params[:query], placeholder: "Where or what are you looking for?" %> 
      <%= button_tag "Deal", class: "button" %>
   <!-- <input type="text" > -->
    </div>  
  <% end %>        
</div>
<div class="pic">
  <img src="assets/homepage1.png" />
</div>
<div class="topDeck">
    <h3>Top Cards</h3>
    <div class="apple_pagination">
      <%= will_paginate @cards %>
    </div>
    <%= render @cards %>
    <div class='card_show'></div>
</div>
<div class="topDeck">
    <h3>Top Decks</h3>
     <div class="apple_pagination">
      <%= will_paginate @decks %>
    </div>
    <%= render @decks %>
</div>
    