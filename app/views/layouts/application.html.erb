            <%= button_tag "Deal", class: "btnAll button" %>
         </div>  
       <% end %>  
      </div>
    </header>
    
      <% if flash[:error] %>
      <div class="alert">
        <%= flash[:error] %>
      </div>
      <% end %>
  
    
      <% if flash[:notice] %>
      <div class="alert">
        <%= flash[:notice] %>
      </div>
      <% end %>
   
    
      <% if flash[:message] %>
      <div class="alert">
        <%= flash[:message] %>
