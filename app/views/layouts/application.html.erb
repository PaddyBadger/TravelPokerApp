<!DOCTYPE html>
 <html>
  <head>
    <link rel="shortcut icon" href="/assets/pokerlike.png"/>
     <title>Travel Poker</title>
    <%= stylesheet_link_tag"application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
<div id="toppanel">
  <div id="panel">
  <div class="centerDiv">
    <div class="topCol">
            <h3>Sign in</h3>
            <input type="text" value="" placeholder="Email" class="inputAll">
            <input type="password" value="" placeholder="Password" class="inputAll">
            <a href="#" class="btn btnAll">Sign In</a>
          <div class="signInMeta">
            <a href="#"><img src="/assets/facebookLog.png"/></a>
            <a href="#"><img src="/assets/gmailLog.png"/></a>
          </div>
    </div>
    <div class="topCol">
            <h3>Sign up</h3>
            <input type="text" value="" placeholder="First name" class="inputAll">
            <input type="text" value="" placeholder="Last name" class="inputAll">
            <input type="text" value="" placeholder="Email" class="inputAll">
            <input type="password" value="" placeholder="Password" class="inputAll">
            <a href="#" class="btn btnAll">Submit</a>
    </div>

    </div>  
  </div> <!-- /login -->  

  <!-- The tab on top --> 
  <div class="tab">
    <ul class="login">
      <li class="left">&nbsp;</li>
      <li>Hello Username!</li>
      <li class="sep">|</li>
      <li id="toggle">
        <a id="open" class="open" href="#">Log In | Register</a>
        <a id="close" style="display: none;" class="close" href="#">Close Panel</a>     
      </li>
      <li class="right">&nbsp;</li>
    </ul> 
  </div> <!-- / top -->
  
</div> <!--panel -->
  <div class="wrapper fade">
    <header>
      <div class="centerDiv">
        <div class="logo">
          <a href="#"><img src="/assets/logo.png" /></a>
        </div>

        <div class="topMenu fade">
          <ul>
