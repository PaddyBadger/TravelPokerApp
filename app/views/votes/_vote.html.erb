<% if can? :create, Vote %>
<div class="vote">
  <%= link_to " ", card_comment_up_vote_path(comment.card, comment), 
    class: "upChevron #{(current_user.voted(comment) && current_user.voted(comment).up_vote?) ? 'voted' : '' }" %>
  <div>
    <strong><%= comment.points %></strong>
  </div>
  <div>
    <%= link_to " ", card_comment_down_vote_path(comment.card, comment), 
    class: "downChevron #{(current_user.voted(comment) && current_user.voted(comment).down_vote?) ? 'voted' : '' }" %>
  </div>
</div>
<% end %>