<h3>Sign in</h3>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, class: "inputAll", placeholder: "Email or Username" %>
    <%= f.password_field :password, class: "inputAll", placeholder: "Password" %>
    <%= f.submit "Sign In", class: "btn btnAll" %>
  <div class="signInMeta">
    <a href="#"><img src="/assets/facebook.png"/></a>
    <a href="#"><img src="/assets/twitter.png"/></a>
    <a class="linkSmall" href="/users/password/new">Forgot Password?</a>
    <% if devise_mapping.rememberable? -%>
    <div class="formLinksSmall">
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    </div>
    <% end -%>
  </div>
<% end %>