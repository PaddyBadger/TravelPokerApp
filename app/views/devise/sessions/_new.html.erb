<h3>Sign in</h3>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, class: "inputAll", placeholder: "Email or Username" %>
  <%= f.password_field :password, class: "inputAll", placeholder: "Password" %>
  <%= f.submit "Sign In", class: "btn btnAll" %>
  <% if devise_mapping.rememberable? -%>
  <div class="formLinksSmall">
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <a href="/users/password/new">Forgot Password?</a><br>
    <a href="/users/sign_up">Sign Up?</a>
  </div>
  <% end -%>
<% end %>
<div class="signInMeta">
  <p>Sign In With:</p>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
     <%= link_to image_tag("/assets/facebook.png"), omniauth_authorize_path(resource_name, provider) %>
    <% end -%>
  <% end -%>
</div>
