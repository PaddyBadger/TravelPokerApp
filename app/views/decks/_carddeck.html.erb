<% if action_name == 'edit' %>
  <div class="edit">
    <% if @deck.cards %>
      <li><%= link_to "Remove", cards_decks_path(card_id: card.id, deck_id: @deck.id), method: :delete, remote: true %></li>
    <% else %>
       <li><%= link_to "Add", cards_decks_path(card_id: card.id, deck_id: @deck.id), method: :post, remote: true %></li>
    <% end %>
  </div>
<% end %>



      