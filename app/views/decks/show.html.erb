<div class="topDeck">
  <h3><%= @deck.title %></h3>
</div>

<div class="deckBack">
    <%= gmaps4rails(@json) %>
    <%= image_tag @deck.image%>
    <div class="tripInfoBack">
      <h3><%= @deck.title%></h3>
    </div>
  
  <div class="deckComs">
    <div class=""><%= render partial: 'likes/like', locals: { likeable: @deck } %></div>
    <%= render partial: 'decks/keep', locals: { deck: @deck } %>
    <%= render partial: 'decks/social', locals: { deck: @deck } %>
    <% if can? :manage, @deck %>
      <div class="memberOnly">
        <span><%= link_to "Edit", edit_deck_path(@deck), class: "editDelete" %></span>
        <span> <%= link_to "Delete", @deck, method: :delete, class: "editDelete", confirm: 'Are you sure you want to delete this deck?' %></span>
      </div>
    <% end %>
  </div>

</div>

<div class="deckCards">
  <div class="topDeck">
  <div class="card">
     <%= render @cards %>
      <div class="apple_pagination">
        <%= will_paginate @cards %>
      </div>

      <span class="twistCardAll">
        <div class="twistCardBack"></div>
        <div class="twistCenter">
          <div class="twistCard"><%= render partial: 'cards/show', collection: @cards, as: :card %></div> 
        </div>
      </span>

  </div>
</div>
</div>



