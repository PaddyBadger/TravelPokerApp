<% if can? :read, @user %>
  <div class="userPanel">
      <h3 id="userLike"><img src="/assets/mylikes.png">My Likes</h3>
      <h3 id="userCards"><img src="/assets/mydecks.png">Decks & Cards</h3>
      <h3 id="userInfo"><img src="/assets/mydone.png">Done</h3>
      
      <div class="userCards">
        <%= render @user.cards %>
        <%= render @user.decks %>
      </div>
   
      <div class="userLike"> 
        <%= render @user.liked_cards %>
        <%= render @user.liked_decks %>
      </div>
   
      <div class="userInfo">
         <%= render partial: 'users/user' %>
      </div>
    
  </div>
<% end %>
