<div class="allMobile">  
  <div class="form">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="topDeck">
        <h3>Sign in</h3>
      </div>

      <%= f.label :email, class: 'formlabel' %>
      <div class="tinput">
        <%= f.email_field :email%>
      </div>

      <%= f.label :password, class: 'formlabel' %>
      <div class="tinput">
        <%= f.password_field :password %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="formLinks">
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      </div>
      <% end -%>

       <div class="cbutton">
        <%= f.submit "Sign In", class: 'btn btn-large' %>
      </div>
    <% end %>
    <div class="formLinks">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>