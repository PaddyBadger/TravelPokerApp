<ul class="overview">
  <li> 
    <div class="tripBackTwist <%= dom_id(card) %>">
      <h3><%= card.title%>: <%= card.location%></h3>
      <h8><%= link_to card.user.name %> contributed <%= time_ago_in_words(card.created_at) %> ago</h8>
    
      <div class="image">
         <div class="map"></div> 
        <%= image_tag card.image%>
      </div>

      <div class="tripInfoBackTwist">
        <h4><%= card.title%>: <span class= 'location'><%= card.location%></span></h4>
      </div>

      <div class="cardComs">
        <div class=""><%= render partial: 'likes/like', locals: { likeable: card } %></div>
        <%= render partial: 'cards/social', locals: { card: card } %>
        <%= render partial: 'cards/keep', locals: { card: card } %>
       
        <% if can? :manage, card %>
          <div class="memberOnly">
            <span><%= link_to "Edit", edit_card_path(card), class: "dk_label editDelete" %></span>
            <span> <%= link_to "Delete", card, method: :delete, class: "dk_label editDelete", confirm: 'Are you sure you want to delete this card?' %></span>
          </div>
        <% end %>
      </div>

      <div class="backInfo">
        
        
          <p><%= card.description%></p>
          <p><%= link_to card.url%></p>
          <h4>Other Decks this Card is Part of</h4>
          <% card.decks.each do |deck| %>
            <%= link_to deck.title, deck %><br>
          <% end %>
        </div> 

        <div class="comments">  
           <h4 class='js-comments-count'><%= card.comments.count %> Additional Thoughts</h4>
          <div class="js-comments"> 
            <%= render partial: "comments/comment", collection: card.comments, locals: { card: @cards} %>
          </div>
            <%= render partial: "comments/form", locals:{ card: card, comment: Comment.new } %>
        </div>
  </div>
  </li>
</ul>
    


